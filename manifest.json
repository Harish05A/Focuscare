{
  "manifest_version": 3,
  "name": "FocusCare 2.0 - Revolutionary Digital Wellness",
  "version": "2.0.0",
  "description": "World's first AI-powered biometric digital wellness extension with 3D environments",
  
  "permissions": [
    "storage",
    "alarms", 
    "notifications",
    "activeTab",
    "tabs",
    "webNavigation",
    "idle"
  ],
  
  "background": {
    "service_worker": "core/background/background.js"
  },
  
  "action": {
    "default_popup": "core/popup/popup.html",
    "default_title": "FocusCare 2.0 - Revolutionary Focus",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png", 
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png", 
    "128": "assets/icons/icon128.png"
  }
}
